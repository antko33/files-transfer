<Window x:Class="FileClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileClient"
        mc:Ignorable="d"
        Title="Файлообменник" Height="277" Width="369" Loaded="Window_Loaded">
    <Grid Margin="0,0,2,-21">
        <Button x:Name="btnUpload" Content="Загрузить файл" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="10,10,0,0" Click="btnUpload_Click" Height="30"/>
        <Button x:Name="btnDownload" Content="Скачать файл" HorizontalAlignment="Left" Margin="125,10,0,0" VerticalAlignment="Top" Width="110" Height="30" Click="btnDownload_Click"/>
        <Button x:Name="btnDelete" Content="Удалить файл" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="30" Margin="240,10,0,0" Click="btnDelete_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="180" Margin="10,45,0,0" VerticalAlignment="Top" Width="339"/>

    </Grid>
</Window>
